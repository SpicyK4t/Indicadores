@model IEnumerable<ProyectoIndicadores.Models.Usuario>

@{
    ViewBag.Title = "ListaUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaUsuarios</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "NuevoUsuario", "Admin")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_usuario)
        </th>        
        <th>
            Es Administrador?
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_usuario)
        </td>        
        <td>
            @if (item.is_admin) { <span>Si</span> }
            else {<span>No</span>}
        </td>        
        <td>            
            @Html.ActionLink("Asignar", "Proveedor", new { id=item.pk })            
            @Html.ActionLink("Details", "Details", new { id=item.pk }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.pk })
        </td>
    </tr>
}

</table>
