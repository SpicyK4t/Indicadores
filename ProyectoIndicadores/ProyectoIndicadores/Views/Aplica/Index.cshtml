@model IEnumerable<ProyectoIndicadores.Models.Aplica>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.indicador.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.indicador.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.pk }) |
            @Html.ActionLink("Details", "Details", new { id=item.pk }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.pk })
        </td>
    </tr>
}

</table>
